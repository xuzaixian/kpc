/******************************
             Theme
*******************************/

use('../functions.js')
$theme-dir := __dirname()
// $fonts-dir := './fonts';
$fonts-dir := '.';

// root font size
$rem := 16

// we must require other file after defined $theme-dir
// otherwise, the __dirname may be weird
@require('../mixin.styl')

/******************************
             Colors
*******************************/

$red := #db2828
$blue := #0a5eee
$yellow := #ff8a00
$grey := #767676
$black := #1b1c1d
$light-black := #595959


/******************************
            Page
*******************************/

$font-family := -apple-system,BlinkMacSystemFont,SF Pro SC,SF Pro Text,Helvetica Neue,Helvetica,PingFang SC,Segoe UI,Roboto,Hiragino Sans GB,arial,microsoft yahei ui,Microsoft YaHei,SimSun,sans-serif
$font-size := unit(14 / $rem, rem)
$text-color := $light-black 
$primary-color := $blue
$warning-color := $yellow
$danger-color := $red
$success-color := #4db500
$border-color := #cad0dd
$dark-border-color := #979797
$title-color := #404040
$disabled-color := #999
$disabled-bg-color := #f7f7f7
$disabled-border-color := #d9d9d9
$bg-color := #eee
$dark-bg-color := #ccc
$placeholder-color := $disabled-color

// size
$large-height := 40
$large-font-size := unit(16 / $rem, rem)
$large-padding := 25
$default-height := 36
$default-font-size := unit(14 / $rem, rem)
$default-padding := 20
$small-height := 30
$small-font-size := unit(12 / $rem, rem)
$small-padding := 15
$mini-height := 26
$mini-font-size := unit(12 / $rem, rem)
$mini-padding := 10

// the gutter between icon and text
$icon-text-gutter := 6

// box-shadow
$box-shadow := 0 2px 8px 0 rgba(191, 191, 191, .5)
$border-radius := unit(2 / $rem, rem) 

$max-z-index := 9999
$mid-z-index := 999

// let height be odd 20 / 14
$line-height := 1.43 

/******************************
            Headers 
*******************************/

$header-font-family := $font-family
$header-margin := 0
$header-font-weight := bold
$h1 := unit(28 / $rem, rem)
$h2 := unit(24 / $rem, rem)
$h3 := unit(18 / $rem, rem)
$h4 := unit(15 / $rem, rem)
$h5 := unit(14 / $rem, rem)


/******************************
            Link
*******************************/

$link-color := #4183c4
$link-underline := none
$link-hover-color := palette($link-color, 1)
$link-hover-underline := $link-underline


/******************************
            Code 
*******************************/

$code-font-family := Consolas, Menlo, Courier, monospace


/******************************
            Transition 
*******************************/

$transition := .25s ease-in-out
