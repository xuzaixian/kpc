@require('../../styles/themes/default.styl')

$tabs-border-color := $border-color
$tabs-border-width := 1px
$tabs-border := $tabs-border-width solid $tabs-border-color
$tabs-height := unit($default-height / $rem, rem)
$tabs-padding := 0 unit(16 / $rem, rem)
$tabs-margin := 0 unit(10 / $rem, rem)
$tabs-color := $text-color

// vertical
$tabs-vertical-padding := 0 unit(25 / $rem, rem)

// active
$tabs-active-color := $primary-color
$tabs-highlight-height := unit(2 / $rem, rem)
$tabs-highlight-bottom := -($tabs-highlight-height / 2)
$tabs-highlight-bg-color := $primary-color

// scroll
$tabs-navigator-width := unit(20 / $rem, rem)

// close
$tabs-close-font-size := unit(20 / $rem, rem)

// size
$tabs-large-font-size := $large-font-size
$tabs-large-height := unit($large-height / $rem, rem)
$tabs-large-padding := 0 unit(25 / $rem, rem)
$tabs-large-close-font-size := unit(24 / $rem, rem)
$tabs-small-font-size := $small-font-size 
$tabs-small-height := unit($small-height / $rem, rem)
$tabs-small-padding := 0 unit(15 / $rem, rem)
$tabs-small-close-font-size := unit(18 / $rem, rem)
$tabs-mini-font-size := $mini-font-size 
$tabs-mini-height := unit($mini-height / $rem, rem)
$tabs-mini-padding := 0 unit(10 / $rem, rem)
$tabs-mini-close-font-size := unit(16 / $rem, rem)

// border-card
$tabs-border-card-bg-color := $bg-color

// no-border-card
$tabs-no-border-card-bg-color := #eee
$tabs-no-border-card-gutter := unit(4 / $rem, rem)

