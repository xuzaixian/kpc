@require('../../styles/themes/default.styl')

$dialog-width := unit(800 / $rem, rem) 
$dialog-bg-color := #fff
$dialog-border-radius := $border-radius
$dialog-padding := unit(30 / $rem, rem)
$dialog-color := $text-color
$dialog-font-size := $default-font-size 

// header
$dialog-title-font-size := unit(16 / $rem, rem) 
$dialog-title-color := $title-color 
$dialog-title-height := unit(60 / $rem, rem)
$dialog-title-border := 1px solid $border-color
$dialog-close-top := unit(10 / $rem, rem)
$dialog-close-right := unit(5 / $rem, rem)
$dialog-close-icon-font-size := unit(32 / $rem, rem)

// body
$dialog-body-padding := unit(18 / $rem, rem) $dialog-padding

// footer
$dialog-footer-padding := unit(24 / $rem, rem) $dialog-padding
$dialog-footer-btn-margin := unit(12 / $rem, rem)

// animation
$dialog-transform := translateY(-10px) scale(1.05)

// size
$dialog-large-width := unit(1000 / $rem, rem)
$dialog-small-width := unit(600 / $rem, rem)
$dialog-mini-width := unit(400 / $rem, rem)

// alert dialog
$dialog-alert-padding := 0 unit(30 / $rem, rem)
$dialog-alert-body-margin-top := -(unit(25 / $rem, rem))
$dialog-alert-tip-icon-margin-bottom := unit(10 / $rem, rem) 
$dialog-alert-tip-icon-font-size := unit(47 / $rem, rem)
$dialog-alert-tip-icon-line-height := unit(37 / $rem, rem)
$dialog-alert-success-tip-icon-color := $success-color
$dialog-alert-warning-tip-icon-color := $warning-color
$dialog-alert-error-tip-icon-color := $danger-color
$dialog-alert-confirm-tip-icon-color := $primary-color
// with title
$dialog-alert-title-tip-icon-font-size := unit(37 / $rem, rem)
$dialog-alert-title-font-size := unit(16 / $rem, rem)
$dialog-alert-wrapper-padding-left := unit(8 / $rem, rem)
$dialog-alert-title-body-margin-top := -(unit(36 / $rem, rem))
