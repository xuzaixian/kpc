@require('../../styles/themes/default.styl')

// default
$btn-color := $light-black
$btn-bg-color := #fff
$btn-border-color := $border-color
$btn-border-radius := $border-radius 
$btn-height := unit($default-height / $rem, rem)
$btn-padding := 0 unit($default-padding / $rem, rem)
$btn-font-size := $default-font-size 
$btn-hover-border-color := $primary-color
$btn-hover-color := $primary-color
$btn-ghost-color := #fff
$btn-ghost-hover-color := palette($primary-color, -1)

// ghost
$btn-default-ghost-border-color := #fff
$btn-default-ghost-hover-border-color := palette($primary-color, -1)

// type
$btn-primary-color := #fff
$btn-primary-bg-color := $primary-color
$btn-primary-border-color := $primary-color
$btn-primary-hover-border-color := palette($btn-primary-border-color, 1)
$btn-primary-ghost-color := $primary-color

$btn-warning-color := #fff
$btn-warning-bg-color := $warning-color
$btn-warning-border-color := $warning-color
$btn-warning-hover-border-color := palette($btn-warning-border-color, 1)
$btn-warning-ghost-color := $warning-color

$btn-danger-color := #fff 
$btn-danger-bg-color := $danger-color
$btn-danger-border-color := $danger-color
$btn-danger-hover-border-color := palette($btn-danger-border-color, 1)
$btn-danger-ghost-color := $danger-color

$btn-active-color := $btn-primary-color 
$btn-active-bg-color := $btn-primary-bg-color
$btn-active-border-color := $btn-primary-border-color
$btn-active-hover-border-color := palette($btn-active-border-color, 1)
$btn-active-ghost-color := $btn-primary-ghost-color

$btn-success-color := #fff
$btn-success-bg-color := $success-color
$btn-success-border-color := $success-color
$btn-success-hover-border-color := palette($btn-success-border-color, 1)
$btn-success-ghost-color := $success-color

$btn-secondary-color := $primary-color
$btn-secondary-border-color := $primary-color
$btn-secondary-hover-bg-color := palette($primary-color, -4)
$btn-secondary-active-bg-color := palette($primary-color, -3)

// size
$btn-large-font-size := $large-font-size
$btn-large-height := unit($large-height / $rem, rem)
$btn-large-padding := 0 unit($large-padding / $rem, rem)
$btn-small-font-size := $small-font-size 
$btn-small-height := unit($small-height / $rem, rem)
$btn-small-padding := 0 unit($small-padding / $rem, rem)
$btn-mini-font-size := $mini-font-size 
$btn-mini-height := unit($mini-height / $rem, rem)
$btn-mini-padding := 0 unit($mini-padding / $rem, rem)

// disabled
$btn-disabled-color := $disabled-color
$btn-disabled-bg-color := $disabled-bg-color 
$btn-disabled-border-color := $disabled-border-color
$btn-disabled-ghost-border-color := $disabled-color

// icon
$btn-icon-margin-right := unit(5 / $rem, em) 
$btn-btn-icon-font-size := unit(16 / $rem, em)

// buttons
$btns-primary-border-color := darken($btn-primary-border-color, 6%)
$btns-warning-border-color := darken($btn-warning-border-color, 6%)
$btns-danger-border-color := darken($btn-danger-border-color, 6%)
$btns-success-border-color := darken($btn-success-border-color, 6%)
