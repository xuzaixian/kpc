@require('./variables.styl')

.k-breadcrumb
    font-size $breadcrumb-font-size
    .k-item
        display inline-block
        if $breadcrumb-active-font-weight != normal
            &:last-of-type
                font-weight $breadcrumb-active-font-weight
    .k-item-link
        color $breadcrumb-color
    a.k-item-link:hover
        color $breadcrumb-hover-color
    .k-separator
        margin $breadcrumb-separator-margin

require($theme-dir + '/breadcrumb.styl')
