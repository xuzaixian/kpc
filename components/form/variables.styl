@require('../../styles/themes/default.styl')

$form-item-margin := 0 0 unit(20 / $rem, rem) 0
$form-item-label-width := unit(80 / $rem, rem)
$form-item-label-line-height := unit($default-height / $rem, rem)
$form-item-label-text-align := right
$form-item-label-padding-right := unit(10 / $rem, rem)
$form-item-star-color := $danger-color
$form-item-star-margin-right := unit(3 / $rem, rem)

// invalid 
$form-item-error-font-size := unit(12 / $rem, rem)
$form-item-error-color := $danger-color
// $form-item-error-margin := unit(2 / $rem, rem) 0 0 0
$form-item-invalid-border := 1px solid $danger-color

// append
$form-item-append-padding := 0 unit(10 / $rem, rem)

// layout
$form-item-inline-margin-right := unit(15 / $rem, rem)
$form-item-vertical-label-margin-bottom := unit(8 / $rem, rem)

// size
$form-small-item-margin := 0 0 unit(15 / $rem, rem) 0
$form-small-item-inline-margin-right := unit(10 / $rem, rem)
$form-mini-item-margin := 0 0 unit(10 / $rem, rem) 0
$form-mini-item-inline-margin-right := unit(5 / $rem, rem)
